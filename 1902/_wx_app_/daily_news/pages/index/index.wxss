.page{
    display: flex;
    flex-direction: column;
    /* background: black; */
    height: 100vh;
}
.searchbar{
    height: 80rpx;
    width: 100vw;
    background: red;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.searchbar>text{
    height: 80rpx;
    line-height: 80rpx;
    color: white;
    width: 20vw;
    font-size: 32rpx;
}
.searchbar>view{
    height: 60rpx;
    width: 70vw;
    background: white;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    border-radius: 15rpx;
}
.searchbar>view>image{
   width: 40rpx;
   height: 40rpx;
}
.searchbar>view>input{
    width: 55vw;
    height: 40rpx;
}
.menu{
    height: 80rpx;
    width: 100vw;
    background: pink;
    display: flex;
    flex-direction: row;
}
.kind-list{
    /* background: yellow; */
    width: 700rpx;
}
.plus{
    width: 50rpx;
    height: 80rpx;
    font-size: 40rpx;
    line-height: 80rpx;
    text-align: center;
    font-weight: bold;
}
.row{
    display: flex;
    flex-direction: row;

}
.item{
    width: 120rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}
.selected-item{
    width: 120rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-weight: bold;
}
.list{
    flex-grow: 1;
    /* background: yellow; */
    width: 100vw;
}
.news{
  margin-top:5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: #000 solid 2px;
  /* height: 220rpx; */
}
.title{
    width: 100%;
    /* height: 50rpx; */
    text-indent: 10rpx;
    text-align: left;
    font-size: 30rpx;
}
.news-imgs{
    width:96vw;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between
}
.news-imgs>image{
    width: 30vw;
    /* flex-grow: 1;
    flex-shrink: 1; */
    height: 120rpx;
}
.info{
    width: 96vw;
    height: 50rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.author,.date{
    width: 40vw;
    font-size: 20rpx;
}
.date{
    text-align: right;
}
